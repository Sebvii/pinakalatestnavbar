<resources>
    <!-- Custom text appearance for BottomNavigationView labels -->
    <style name="BottomNavigationViewText" parent="TextAppearance.AppCompat.Caption">
        <item name="android:textSize">14sp</item> <!-- Adjust text size as needed -->
        <item name="android:textStyle">normal</item> <!-- Removes bold -->
        <item name="android:paddingTop">4dp</item> <!-- Adjust padding as needed -->
        <item name="android:paddingBottom">4dp</item> <!-- Adjust padding as needed -->
    </style>
    <style name="TabStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#333333</item>
        <item name="android:padding">8dp</item>
    </style>
    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item> <!-- Change size as needed -->
        <item name="android:textColor">@android:color/black</item>
    </style>

</resources>